@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style>
    .custom-col {
        padding-left: 5px;
        padding-right: 5px;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="container pb-4">
                <div class="row">
                    <div class="col-md-3 text-center pb-4">
                        <a asp-page ="/Services">
                            <img src="~/images/services.png" asp-append-version="true" alt="Imagem 1" style="width: 100px; height: 100px;">
                            <h4>1</h4>
                            <h3>Atendimento</h3>
                        </a>
                    </div>
                    <div class="col-md-3 text-center pb-4">
                        <a asp-page="/Visits">
                            <img src="~/images/visits.png" asp-append-version="true" alt="Imagem 2" style="width: 100px; height: 100px;">
                            <h4>2</h4>
                            <h3>Visita</h3>
                        </a>
                    </div>
                    <div class="col-md-3 text-center pb-4">
                        <a asp-page ="/Proposals">
                            <img src="~/images/proposals.png" asp-append-version="true" alt="Imagem 3" style="width: 100px; height: 100px;">
                            <h4>3</h4>
                            <h3>Proposta</h3>
                        </a>
                    </div>
                    <div class="col-md-3 text-center pb-4">
                        <a asp-page ="/Formalizations">
                            <img src="~/images/formalizations.png" asp-append-version="true" alt="Imagem 4" style="width: 100px; height: 100px;">
                            <h4>4</h4>
                            <h3>Formalização</h3>
                        </a>
                    </div>
                </div>
            </div>

            <div class="container mt-4">
                <div class="row">
                    <div class="col-md-2 text-center pb-4 custom-col">
                        <a asp-page ="/LeadsTotal">
                            <img src="~/images/leads.png" asp-append-version="true" alt="Imagem 5" style="width: 50px; height: 50px;">
                            <h4 style="font-size: 1rem;">5</h4>
                            <h3 style="font-size: 1.25rem;">Leads Totais</h3>
                        </a>
                    </div>
                    <div class="col-md-2 text-center pb-4 custom-col">
                        <a asp-page ="/LeadsYear">
                            <img src="~/images/leads.png" asp-append-version="true" alt="Imagem 6" style="width: 50px; height: 50px;">
                            <h4 style="font-size: 1rem;">6</h4>
                            <h3 style="font-size: 1.25rem;">Leads no ano</h3>
                        </a>
                    </div>
                    <div class="col-md-2 text-center pb-4 custom-col">
                        <a asp-page ="/LeadsMonth">
                            <img src="~/images/leads.png" asp-append-version="true" alt="Imagem 7" style="width: 50px; height: 50px;">
                            <h4 style="font-size: 1rem;">7</h4>
                            <h3 style="font-size: 1.25rem;">Leads no Mês</h3>
                        </a>
                    </div>
                    <div class="col-md-2 text-center pb-4 custom-col">
                        <a href="sua_pagina_destino.html">
                            <img src="~/images/formalizations.png" asp-append-version="true" alt="Imagem 8" style="width: 50px; height: 50px;">
                            <h4 style="font-size: 1rem;">8</h4>
                            <h3 style="font-size: 1.25rem;">Fechamentos Totais</h3>
                        </a>
                    </div>
                    <div class="col-md-2 text-center pb-4 custom-col">
                        <a href="sua_pagina_destino.html">
                            <img src="~/images/formalizations.png" asp-append-version="true" alt="Imagem 9" style="width: 50px; height: 50px;">
                            <h4 style="font-size: 1rem;">9</h4>
                            <h3 style="font-size: 1.25rem;">Fechamentos no ano</h3>
                        </a>
                    </div>
                    <div class="col-md-2 text-center pb-4 custom-col">
                        <a href="sua_pagina_destino.html">
                            <img src="~/images/formalizations.png" asp-append-version="true" alt="Imagem 10" style="width: 50px; height: 50px;">
                            <h4 style="font-size: 1rem;">10</h4>
                            <h3 style="font-size: 1.25rem;">Fechamentos no Mês</h3>
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
